<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.summary %></td>
        <td><%= link_to 'Show', book %></td>
        <td>
          <% if can? :update, book %>
            <%= link_to 'Edit', edit_book_path(book) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, book %>
            <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Book %>
    <%= link_to 'New Book', new_book_path %>
<% end %>